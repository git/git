(
# LINT: 'for', 'do', 'done' do not need "&&"
	for i in a b c
	do
# LINT: missing "&&" on 'echo'
		echo $i
# LINT: last statement of while does not need "&&"
		cat <<-\EOF
		bar
		EOF
# LINT: missing "&&" on 'done'
	done

# LINT: 'do' on same line as 'for'
	for i in a b c; do
		echo $i &&
		cat $i
	done
)
